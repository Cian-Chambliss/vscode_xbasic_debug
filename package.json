{
  "name": "xbasicdebugger",
  "displayName": "Alpha Anywhere XBasic Debugger",
  "description": "Alpha Anywhere XBasic Debugger",
  "icon": "images/alphaXbasicBadge.png",
  "publisher": "AlphaAnywhere",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "onDebug",
    "onDebugInitialConfigurations"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "breakpoints": [
      {
        "language": "xbasic"
      }
    ],
    "debuggers": [
      {
        "type": "xbasicdebugger",
        "label": "XBasic WebSocket Debugger",
        "program": "./out/debugServer.js",
        "languages": [
          "xbasic"
        ],
        "configurationAttributes": {
          "launch": {
            "properties": {
              "program": {
                "type": "string",
                "description": "The path to the program",
                "default": "${workspaceFolder}/${file}"
              },
              "debugPort": {
                "type": "number",
                "default": 4711,
                "description": "Port for DAP debugging"
              },
              "debugHost": {
                "type": "string",
                "default": "localhost",
                "description": "Host for DAP debugging"
              }
            },
            "required": [
              "program",
              "debugPort",
              "debugHost"
            ]
          },
          "attach": {
            "properties": {
              "debugPort": {
                "type": "number",
                "default": 4711,
                "description": "Port for DAP debugging"
              },
              "debugHost": {
                "type": "string",
                "default": "localhost",
                "description": "Host for DAP debugging"
              }
            },
            "required": [
              "debugPort",
              "debugHost"
            ]
          }
        },
        "initialConfigurations": [
          {
            "name": "Debug Xbasic Program",
            "type": "xbasicdebugger",
            "request": "launch",
            "program": "${file}",
            "debugHost": "localhost",
            "debugPort": 4711,
            "cwd": "${workspaceFolder}"
          },
          {
            "name": "Attach to Xbasic Environment",
            "type": "xbasicdebugger",
            "request": "attach",
            "debugHost": "localhost",
            "debugPort": 4711
          }
        ],
        "configurationSnippets": [
          {
            "label": "Xbasic Debugger: Launch",
            "description": "Launch a program using Xbasic Debugger",
            "body": {
              "name": "Launch Xbasic Program",
              "type": "xbasicdebugger",
              "request": "launch",
              "program": "${file}",
              "debugHost": "localhost",
              "debugPort": 4711
            }
          },
          {
            "label": "Xbasic Debugger: Attach",
            "description": "Attach to a running Xbasic Environment",
            "body": {
              "name": "Attach to Xbasic Environment",
              "type": "xbasicdebugger",
              "request": "attach",
              "debugHost": "localhost",
              "debugPort": 4711
            }
          }
        ],
        "variables": {
          "AskForProgram": "extension.xbasicdebugger.askForProgram"
        }
      }
    ]
  },
  "badges": [
    {
      "url": "https://www.alphasoftware.com/documentation/pages/images/alphaXbasicBadge.png",
      "href": "https://www.alphasoftware.com/documentation/pages/images/alphaXbasicBadge.png",
      "description": "Alpha Anywhere Xbasic Debugger"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Cian-Chambliss/vscode_xbasic_debug.git"
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.4.2",
    "@types/ws": "^8.5.9",
    "typescript": "^5.0.0",
    "vscode": "^1.1.34"
  },
  "dependencies": {
    "ws": "^8.14.2"
  }
}